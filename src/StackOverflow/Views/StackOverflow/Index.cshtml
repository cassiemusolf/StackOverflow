@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims
@model IEnumerable<StackOverflow.Models.Question>

<h2>Here is your list of questions, @User.Identity.Name</h2>
<hr />

@if (Model.Any())
{
    <ul>
        @foreach (var listQuestion in Model)
        {
            <li>@Html.DisplayFor(modelQuestion => listQuestion.Title) | @Html.ActionLink("Details", "Details", new { id = listQuestion.QuestionId }) </li>
        }
    </ul>
}
else
{
    <p>No questions have been added yet!</p>
}

@Html.ActionLink("Create new", "Create")